{
  "name": "Slack Spring Boot Starter",
  "description": "Spring Boot Starter for Slack Integrations and Bots",
  "logo": "https://abload.de/img/logod4k3l.png",
  "keywords": [
    "Slack API",
    "Spring-Boot",
    "Spring-Boot-Starter",
    "Heroku",
    "Productivity",
    "Agile"
  ],
  "success_url": "/",
  "website": "https://github.com/kreait/slack-spring-boot-heroku",
  "repository": "https://github.com/kreait/slack-spring-boot-heroku",
  "formation": {
    "web": {
      "quantity": 1,
      "size": "free"
    }
  },
  "env": {
    "PORT": {
      "description": "Specifies the Port your App is listening on (Optional)",
      "required": false
    },
    "SLACK_TOKEN": {
      "description": "The OAuth Token of your App",
      "required": true
    },
    "SLACK_CLIENT_ID": {
      "description": "The Client-ID of your App",
      "required": true
    },
    "SLACK_CLIENT_SECRET": {
      "description": "The Client-Secret of your App",
      "required": true
    },
    "SLACK_SIGNING_SECRET": {
      "description": "The Signing-Secret of your App",
      "required": true
    }
  },
  "stack": "container"
}